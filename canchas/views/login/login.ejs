<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8"/>
    <title>Iniciar Sesión</title>

    <style>

    </style>
    <%- include("../compartido/estilos-generales/estilos-generales-component.ejs") %>

</head>
<body>
<% const existeError= typeof parametrosConsulta.error!= "undefined"%>

<div class="container">
    <h1>Iniciar sesión</h1>
    <% if (existeError){ %>
        <div class="alert alert-danger" role="alert">
            <%= parametrosConsulta.error%>
        </div>
    <% } %>
    <form action="/login" method="post">
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label" name="usuario">Username</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="staticEmail" placeholder="Username" name="usuario">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label" name="password">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>
        </div>
        <button type="submit" class="btn btn-secondary mb-2">Iniciar sesión</button>
    </form>
</div>

<%- include("../compartido/funcionalidad-general/funcionalidad-general-component.ejs") %>
</body>
</html>